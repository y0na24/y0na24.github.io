---
import { Image } from 'astro:assets'
import Button from 'src/shared/components/Button.astro'

import logo from 'src/assets/logo.svg'
import burgerMenu from 'src/assets/burger-menu.svg'
import NavList from './NavList.astro'
---

<header class='header header__container'>
	<Image src={logo} alt='Логотип "Альтаир"' />
	<Image class='burger-menu' src={burgerMenu} alt='Навигационное меню' />

	<NavList class='header__nav-list' />
	<Button href='Контакты' class='header__contactUsBtn' variant='green'>
		<div class='header__contactUsBtn-container'>
			<div>Связаться</div>
			<svg
				width='24.000000'
				height='24.000000'
				viewBox='0 0 24 24'
				fill='none'
				xmlns='http://www.w3.org/2000/svg'
				xmlns:xlink='http://www.w3.org/1999/xlink'
			>
				<defs>
					<clipPath id='clip4_555'>
						<rect
							id='Arrow Icon'
							rx='0.000000'
							width='23.000000'
							height='23.000000'
							transform='translate(0.500000 0.500000)'
							fill='white'
							fill-opacity='0'></rect>
					</clipPath>
				</defs>
				<rect
					id='Arrow Icon'
					rx='0.000000'
					width='23.000000'
					height='23.000000'
					transform='translate(0.500000 0.500000)'
					fill='#000'
					fill-opacity='0'></rect>
				<g clip-path='url(#clip4_555)'>
					<path
						id='Vector'
						d='M7 7L17 7L17 17M7 17L17 7'
						stroke='#FFFFFF'
						stroke-opacity='1.000000'
						stroke-width='2.000000'
						stroke-linejoin='round'
						stroke-linecap='round'></path>
				</g>
			</svg>
		</div>
	</Button>
</header>

<style>
	.header {
		height: 80px;
		max-width: 1029px;
		transform: translateY(19px);
		backdrop-filter: blur(20px);
		background-color: rgba(255, 255, 255, 0.2);
		border-radius: 16px;
		padding: 10px 24px;
		margin-bottom: 200px;
		margin-inline: auto;
	}

	.header__container {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.header__nav-list {
		display: none;
	}

	.header__contactUsBtn {
		display: none;
		padding: 12px 24px;
		font-size: 18px;
		transition: all 0.2s;
		border: 1px solid var(--primary-color);
	}

	.header__contactUsBtn:hover {
		color: var(--primary-color);
		background: var(--white-color);
	}

	svg g path {
		transition: stroke 0.2s;
	}

	.header__contactUsBtn:hover svg g path {
		stroke: var(--primary-color);
	}

	.header__contactUsBtn-container {
		display: flex;
		align-items: center;
		gap: 4px;
	}

	.burger-menu {
		margin-left: auto;
	}

	@media screen and (min-width: 480px) {
		.header {
			margin-bottom: 316px;
		}
	}

	@media screen and (min-width: 768px) {
		.header {
			margin-bottom: 367px;
		}
	}

	@media screen and (min-width: 1024px) {
		.header__nav-list {
			display: flex;
		}

		.burger-menu {
			display: none;
		}

		.header__contactUsBtn {
			display: block;
		}

		.header__container {
			gap: 48px;
		}

		.header {
			margin-bottom: 285px;
		}
	}
</style>
