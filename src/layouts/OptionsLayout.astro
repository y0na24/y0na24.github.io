---
import '../styles/global.css'

import hero480 from 'src/assets/manufacture-480.webp'
import hero768 from 'src/assets/manufacture-768.webp'
import hero1440 from 'src/assets/manufacture-1440.webp'
import hero1920 from 'src/assets/manufacture-1920.webp'

interface Props {
	title?: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='ru'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<meta
			name='keywords'
			content='Производство военной тары, Промышленная тара, Тара для военной техники, Тара для промышленного оборудования, Деревянные ящики для военной техники, Упаковка для боеприпасов и оружия, Тара для ракетной техники, Упаковка для авиационного оборудования, Транспортная тара для химической продукции, Производитель промышленной тары, Герметичные контейнеры для оборудования, Тара для электрооборудования, Тара для пивоваренной продукции, Производство тары для оборонной промышленности, Изготовление металлических контейнеров, Деревянные ящики для перевозки продукции, Упаковка для пищевой промышленности, СМК и ОКВЭД производство тары, Высококачественная промышленная тара'
		/>
		<meta
			property='og:url'
			content='https://altair-tara.ru/proizvodstvo-tary-dlya-voennoy-tekhniki'
		/>
		<meta property='og:locale' content='ru_RU' />
		<meta
			property='og:site_name'
			content='Альтаир | Производство тары для промышленности и военной техники'
		/>
		<meta property='og:type' content='website' />
		<meta name='robots' content='index, follow' />
		<meta
			property='og:title'
			content='Альтаир | Производство тары для промышленности и военной техники'
		/>
		<meta
			name='description'
			content='На странице представлена информация о производстве специализированной тары для военной техники и промышленности. Мы изготавливаем высококачественные металлические и деревянные контейнеры для защиты и транспортировки военной продукции.'
		/>
		<title>
			{
				title ||
					'Альтаир | Производство тары для промышленности и военной техники'
			}
		</title>
		<link rel='shortcut icon' href='/altair.svg' />
		<meta name='generator' content={Astro.generator} />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link rel='preload' as='image' href={hero480.src} />
		<link rel='preload' as='image' href={hero768.src} />
		<link rel='preload' as='image' href={hero1440.src} />
		<link rel='preload' as='image' href={hero1920.src} />

		<script type='application/ld+json'>
			{
				"@context": "https://schema.org",
				"@type": "Product",
				"name": "Тара для военной техники и промышленности",
				"description": "Высококачественная тара для транспортировки и защиты военной техники, произведенная компанией «Альтаир». Герметичные и безопасные контейнеры для перевозки боеприпасов, оружия и прочего оборудования.",
				"image": "/src/assets/manufacture-1920.webp",
				"url": "https://altair-tara.ru/proizvodstvo-tary-dlya-voennoy-tekhniki",
				"brand": {
					"@type": "Brand",
					"name": "Альтаир"
				},
				"offers": {
					"@type": "Offer",
					"url": "https://altair-tara.ru/proizvodstvo-tary-dlya-voennoy-tekhniki",
					"priceCurrency": "RUB",
					"price": "по запросу",
					"itemCondition": "https://schema.org/NewCondition",
					"availability": "https://schema.org/InStock"
				}
			}
		</script>
	</head>
	<body class='wrapper'>
		<slot />
	</body>
</html>
