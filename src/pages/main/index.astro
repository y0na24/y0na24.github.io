---
import BaseLayout from 'src/layouts/BaseLayout.astro'
import HeroSection from './sections/hero/HeroSection.astro'
import PossibilitiesSection from './sections/possibilities/PossibilitiesSection.astro'
import OptionsSection from './sections/options/OptionsSection.astro'
import CapacitySection from './sections/capacity/CapacitySection.astro'
import PartnersSection from './sections/partners/PartnersSection.astro'
---

<BaseLayout title='Альтаир'>
	<HeroSection class='heroSection' />
	<PossibilitiesSection class='possibilitiesSection' />
	<OptionsSection class='roundedWhiteSection' />
	<CapacitySection class='capacitySection' />
	<PartnersSection class='partnersSection' />
</BaseLayout>

<style>
	.possibilitiesSection {
		padding-top: 36px;
	}

	.roundedWhiteSection {
		border-radius: 40px;
		background-color: var(--white-color);
	}

	.capacitySection {
		padding-top: 50px;
	}

	.partnersSection {
		padding-top: 96px;
	}
</style>
