---
import BaseLayout from 'src/layouts/BaseLayout.astro'
import HeroSection from '@components/sections/mainPage/hero/HeroSection.astro'
import PossibilitiesSection from '@components/sections/mainPage/possibilities/PossibilitiesSection.astro'
import OptionsSection from '@components/sections/mainPage/options/OptionsSection.astro'
import CapacitySection from '@components/sections/mainPage/capacity/CapacitySection.astro'
import PartnersSection from '@components/sections/mainPage/partners/PartnersSection.astro'
import RecomendationsSection from '@components/sections/mainPage/recomendations/RecomendationsSection.astro'
import ContactsSection from '@components/sections/mainPage/contacts/ContactsSection.astro'
import Footer from 'src/shared/ui/Footer.astro'
---

<BaseLayout title='Альтаир | Производство военной и промышленной тары'>
	<HeroSection class='heroSection' />
	<PossibilitiesSection class='possibilitiesSection' />
	<OptionsSection class='roundedWhiteSection' />
	<CapacitySection class='capacitySection' />
	<PartnersSection class='partnersSection roundedWhiteSection' />
	<RecomendationsSection class='recomendationSection' />
	<ContactsSection class='roundedWhiteSection contactsSection' />
	<Footer class='roundedWhiteSection footerSection' />
</BaseLayout>

<style>
	.roundedWhiteSection {
		border-radius: 40px;
		background-color: var(--white-color);
	}

	.capacitySection {
		padding-top: 30px;
		margin-bottom: 30px;
	}

	.contactsSection {
		margin-bottom: 56px;
	}

	.footerSection {
		padding: 32px;
		margin-bottom: 42px;
	}

	.partnersSection,
	.possibilitiesSection,
	.recomendationSection {
		padding-top: 30px;
	}

	@media screen and (min-height: 1024px) {
		.possibilitiesSection,
		.capacitySection,
		.partnersSection,
		.recomendationSection {
			padding-top: 50px;
		}

		.capacitySection {
			margin-bottom: 50px;
		}
	}
</style>
