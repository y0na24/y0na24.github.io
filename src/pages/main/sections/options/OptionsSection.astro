---
import type { HTMLAttributes } from 'astro/types'
import OptionsList from './components/OptionsList.astro'
import OptionsCard from './components/OptionsCard.astro'

import { optionsCards } from './consts'

interface Props extends HTMLAttributes<'section'> {}
---

<section class:list={['options', Astro.props.class]} {...Astro.props}>
	<div class='container'>
		<h2 class='title options__title'>Виды производимой тары</h2>
		<OptionsList>
			{optionsCards.map(card => <OptionsCard item={card} />)}
		</OptionsList>
	</div>
</section>

<style>
	.options {
	}

	.options__title {
		margin-bottom: 42px;
	}
</style>
