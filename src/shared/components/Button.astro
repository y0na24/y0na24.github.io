---
import type { HTMLAttributes } from 'astro/types'

type ButtonVariant = 'green' | 'transparent' | 'transparent-green'

interface Props extends HTMLAttributes<'button'> {
	variant: ButtonVariant
}

const { variant, ...props } = Astro.props
---

<button
	class:list={[
		'btn',
		{
			'btn--green': variant === 'green',
			'btn--transparent': variant === 'transparent',
			'btn--green-transparent': variant === 'transparent-green',
		},
		Astro.props.class,
	]}
	{...props}
>
	<slot />
</button>
