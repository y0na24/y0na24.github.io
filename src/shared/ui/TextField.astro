---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'input'> {
	label?: string
	isTextArea?: boolean
}

const { name, placeholder, label, isTextArea = false, ...props } = Astro.props
---

<div class='textfield' {...props}>
	<label for={name}>{label}</label>
	{
		isTextArea ? (
			<textarea name={name} placeholder={placeholder} />
		) : (
			<input name={name} placeholder={placeholder} {...props} />
		)
	}
	<p class='textfield__error' data-error=`${name}`></p>
</div>

<style>
	.textfield {
		display: flex;
		flex-direction: column;
		width: 100%;
	}

	.textfield__error {
		color: red;
	}

	.textfield input,
	.textfield textarea {
		border: 1px solid rgb(192, 192, 160);
		padding: 24px;
		border-radius: 12px;
		outline: none;
		font-size: 16px;
		resize: none;
		width: 100%;
	}

	.textfield textarea {
		font-weight: 500;
		font-family: Manrope;
		font-size: 16px;
	}

	.textfield input::placeholder,
	.textfield textarea::placeholder {
		font-size: 16px;
	}

	.textfield label {
		font-size: 16px;
		margin-bottom: 5px;
	}

	@media screen and (min-width: 768px) {
		.textfield input::placeholder,
		.textfield textarea::placeholder,
		.textfield textarea,
		.textfield input,
		.textfield label {
			font-size: 18px;
		}
	}

	@media screen and (min-width: 1024px) {
		.textfield input::placeholder,
		.textfield textarea::placeholder,
		.textfield textarea,
		.textfield input,
		.textfield label {
			font-size: 20px;
		}
	}
</style>
